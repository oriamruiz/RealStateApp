@model RealStateApp.Core.Application.ViewModels.AdminHome.AdminHomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Informacion General</h4>

                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <h4>Propiedades</h4>
                        <p>Propiedades Totales: @Model.AllProperties </p>
                    </div>

                    <hr />
                    <div class="mb-2">
                        <h4>Agentes</h4>
                        <p>Agentes Activos: @Model.AllAgentsActive </p>
                        <p>Agentes Inactivos: @Model.AllAgentsInactive </p>
                    </div>
                    <hr />
                    <div class="mb-2">
                        <h4>Clientes</h4>
                        <p>Clientes Activos: @Model.AllClientsActive </p>
                        <p>Clientes Inactivos: @Model.AllClientsInactive </p>
                    </div>
                    <hr />
                    <div class="mb-2">
                        <h4>Desarrolladores</h4>
                        <p>Desarrolladores Activos: @Model.AllDevelopersActive </p>
                        <p>Desarrolladores Inactivos: @Model.AllDevelopersInactive </p>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>