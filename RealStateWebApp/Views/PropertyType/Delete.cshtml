@model RealStateApp.Core.Application.ViewModels.PropertyTypes.SavePropertyTypeViewModel
@{

    ViewData["Title"] = "Eliminar tipo de propiedad";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>¿Está seguro que desea eliminar este tipo de propiedad y todas las propiedades con este tipo?</h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-controller="PropertyType" asp-action="Delete" >
                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Model.Error</p>
                                <buttom type="buttom" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </buttom>
                            </div>
                        }

                        <div class="mb-2">
                            <label asp-for="Name" class="form-label">Nombre: </label>
                            <input asp-for="Name" type="text" class="form-control" readonly />
                        </div>

                        <div class="mb-2">
                            <label asp-for="Description" class="form-label">Descripcion: </label>
                            <input asp-for="Description" type="text" class="form-control" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-controller="AdminHome" asp-action="PropertyTypes" class="btn btn-warning">Volver</a>


                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
